<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/madBackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_bikes_detail"
    tools:context="com.cs442.team6.madbikes.BikesDetail">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/bike"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/bname"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="ALLEZ or some thing"
            android:textSize="33dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Available:"
            android:textSize="20dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/bname"/>
        <TextView
            android:id="@+id/bavailable"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="No"
            android:textSize="25dp"
            android:textColor="#ff0033"
            android:layout_alignParentRight="true"
            android:layout_below="@id/bname"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Rate:"
            android:textSize="20dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/bavailable"/>
        <TextView
            android:id="@+id/brate"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="$4.00/hr"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_alignParentRight="true"
            android:layout_below="@id/bavailable"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Condition:"
            android:textSize="20dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/brate"/>
        <TextView
            android:id="@+id/bcondition"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="N/A"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_alignParentRight="true"
            android:layout_below="@id/brate"/>

        <!--TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="location:"
            android:textSize="20dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/bcondition"/>
        <TextView
            android:id="@+id/blocation"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="lat 41.83831\nLng -87.627371)"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_alignParentRight="true"
            android:layout_below="@id/bcondition"/-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Address:"
            android:textSize="20dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/bcondition"/>
        <TextView
            android:id="@+id/baddress"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="N/A"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_alignParentRight="true"
            android:layout_below="@id/bcondition"/>
    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email The Owner"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="56dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text The Owner"
        android:id="@+id/button2"
        android:layout_alignTop="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
